name: HTML Validation

on:
  push:
    branches:
      - main  
  pull_request:
    branches:
      - main 

jobs:
  validate-html:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Validate HTML
        run: |
          sudo apt-get install -y tidy
